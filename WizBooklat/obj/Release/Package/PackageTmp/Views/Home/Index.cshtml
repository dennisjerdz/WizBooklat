@{
    Layout = "../Shared/_HomeLayout.cshtml";
    ViewBag.Title = "Home Page";
}

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.3.0/animate.css" />
    <style>
        html {
            height:100% !important;
        }

        body{
            background-color:#ffffff !important;
            //background-color:white !important;
            padding:0px;
        }

        .hero{
            //background:url('@Url.Content("~/Content/Images/3.jpg")');
            background-size:cover;
            padding-top:30px;
            padding-bottom:0px;
            //padding-bottom:220px;
            //box-shadow: 0px 0px 40px 4px rgba(0,0,0,1) inset;
        }

        @@media(max-width:768px){
            .container-home{
                padding-left:15px !important;
                padding-right:15px !important;
            }

            .hero-heading{
                text-align:center;
                margin-right:0px;
                margin-top:20px;
            }

            .icon-left-container, .icon-right-container{
                float:unset !important;
                margin-left:0px !important;
                margin-right:0px !important;
                text-align:center !important;
            }

            .text-left-container, .text-right-container{
                float:unset !important;
                margin-left:0px !important;
                margin-right:0px !important;
                text-align:center !important;
            }

            .hero-heading{
                text-align:center !important;
            }

            .small-text-align-center{
                text-align:center;
            }
        }

        @@media(min-width:769px){
            .container-home{
                padding-left:70px !important;
                padding-right:70px !important;
            }
        }

        body{
            padding-top:0px !important;
        }

        .hero input.form-control-line-only{
            line-height:30px !important;
            font-size:1.2em;
            margin-bottom:25px;
        }

        .hero .btn{
            line-height:30px !important;
            font-size:1.2em;
            margin-top:57px;
            margin-bottom:30px;
            font-weight:800;
        }

        .hero h2.hero-form-text{
            margin-left:140px;
            margin-right:140px;
            padding-bottom:25px;
            border-bottom:1px solid rgba(0,0,0,0.1);
            margin-bottom:50px;
        }

        .hero-heading{
            text-align:right;
            margin-right:30px;
            margin-top:40px;
        }

        .hero-heading h2, .hero-heading h4{
            font-weight:800;
            text-shadow:2px 6px 6px black;
        }

        .hero-heading h2{
            font-size:4em;
            color:white;
            margin-bottom:20px;
        }

        .hero-heading h4{
            font-size:3em;
            color:rgba(255,255,255,0.7);
        }

        .md-landing{
            font-size:150px !important;
            color:white;
        }

        .icon-left-container{
            padding:20px;
            border-radius:10px;
            background-color:#00d0ff;
            display:inline-block;
            float:right;
            margin-right:100px;
        }

        .icon-right-container{
            padding:20px;
            border-radius:10px;
            background-color:#00d0ff;
            display:inline-block;
            float:left;
            margin-left:100px;
        }

        .text-left-container .head,.text-right-container .head{
            color:orange;
            font-size:2.5em;
            font-weight:800;
        }

        .text-left-container .sub,.text-right-container .sub{
            color:unset !important;
            font-size:1.8em !important;
            font-weight:400;
            display:block;
        }

        .text-left-container{
            text-align:right;
        }

        .text-right-container{
            text-align:left;
        }

        .container-info .row{
            margin-bottom:120px;
        }

        .icon-left-container{
            text-align:center !important;
            margin-bottom:10px;
        }

        .navbar-container{
            box-shadow:none;
        }
    </style>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
}

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js"></script>
    <script>
        $(document).ready(function () {
            new WOW().init();
        });
    </script>
}

<div class="hero">
    <div class="navbar navbar-default" style="background-color:transparent !important;">
        <div class="container container-home">
            <div class="navbar-container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home", new { })" class="navbar-brand">
                        <strong class="text-logo-blue">Wiz</strong><font class="text-logo-blue">Booklat</font>
                        <img style="width:67px; margin-top:-5px; display:inline-block;" src="~/Content/Images/logo.png" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Gallery", "Gallery", "Books")</li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li><a href="#Contact">Contact Us</a></li>
                        }
                        @if (User.IsInRole("Entrance"))
                        {
                            <li>@Html.ActionLink("Entrance", "Index", "Entrance")</li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Books
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Books", "Index", "Books")</li>
                                    <li>@Html.ActionLink("Genres", "Index", "Genres")</li>
                                    <li>@Html.ActionLink("Authors", "Index", "Authors")</li>
                                    <li>@Html.ActionLink("Others", "Others", "Books")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Accounts
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("All Accounts", "Accounts", "Admin")</li>
                                    <li>@Html.ActionLink("Students", "Students", "Admin")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Loans
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Active Loans", "ActiveLoans", "Admin")</li>
                                    <li>@Html.ActionLink("Completed Loans", "CompletedLoans", "Admin")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    System
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Reports", "Reports", "Admin")</li>
                                    <li>@Html.ActionLink("Branches", "Index", "Branches")</li>
                                    <li>@Html.ActionLink("Ranks", "Index", "Ranks")</li>
                                    <li>@Html.ActionLink("Settings", "Index", "Settings")</li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Loaner"))
                        {
                            <li>@Html.ActionLink("Others", "Others", "Books")</li>
                            <li>@Html.ActionLink("My Loans", "MyLoans", "Loans")</li>
                            <li>@Html.ActionLink("Rewards", "ViewRewards", "Ranks")</li>
                            <li>@Html.ActionLink("Claimed Rewards", "Index", "Manage")</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>

    <div class="container container-home">
        <div class="row">
            <div style="">
                <div class="col-md-6 col-md-push-6">
                    <div class="body-container" style="
                            box-shadow:none;
                            margin-top:0px;
                            padding-top:30px;
                            border-radius:10px;
                            border:1px solid #00d0ff;
                            height:560px;
                            border-left:none; border-top-left-radius:0px; border-bottom-left-radius:0px;">
                        <center>
                            <img style="width:65px; margin-bottom:-40px; margin-left:20px; display:inline-block;" src="~/Content/Images/logo.png" />
                            <h2 class="text-logo-blue"><strong>Wiz</strong><font class="text-logo-blue">Booklat</font></h2>
                            <br />
                            <br />
                            <br />
                        </center>

                        <form class="form-home" action="@Url.Action("Register","Account", null)" method="GET">
                            <input class="form-control form-control-line-only" name="StudentNumber" placeholder="Student Number" />
                            <input class="form-control form-control-line-only" name="Email" placeholder="Email" />
                            <button class="btn btn-lg btn-info btn-block" type="submit">Register</button>
                            <br />
                            <center>
                                <h4>
                                    <a href="@Url.Action("Login","Account", new { })">Already have an account? Login here.</a>
                                </h4>
                            </center>
                        </form>
                    </div>
                </div>

                <div class="col-md-6 col-md-pull-6">
                    <img src="~/Content/Images/hero2.jpeg" style="width:100%; border-radius:10px;" />
                    <!--<div class="hero-heading">
            <h2>WizBooklat</h2>
            <h4>Cloud Based Library Management System</h4>
        </div>-->
                </div>
            </div>
            
        </div>
    </div>
</div>

