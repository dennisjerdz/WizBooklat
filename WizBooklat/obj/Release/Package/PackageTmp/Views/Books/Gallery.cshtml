@model WizBooklat.Models.ViewModels.InitialGalleryViewModel

@{
    ViewBag.Title = "Gallery";

}

<div class="row-container-offset-top">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12">
                    <h2>Featured</h2>
                    <div class="horizontal-scrolling-wrapper">
                        <div class="horizontal-scrolling-container">
                            @foreach (var featuredBook in Model.Featured)
                            {
                                <div class="body-container" style="margin-right:40px; display:inline-block !important;">
                                    @featuredBook.Title
                                    <br />
                                    @featuredBook.ISBN
                                    <br />
                                    @featuredBook.DateCreated.ToString("MM-dd-yy")
                                    <br />
                                    <img src="@featuredBook.ImageLocation" />
                                    <br />
                                    <a class="btn btn-block btn-warning" href="@Url.Action("Loan", new { id = featuredBook.BookTemplateId })">View</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h2>New Arrival</h2>
                    <div class="horizontal-scrolling-wrapper">
                        <div class="horizontal-scrolling-container">
                            @foreach (var featuredBook in Model.NewArrival)
                            {
                                <div class="body-container" style="margin-right:40px; display:inline-block !important;">
                                    @featuredBook.Title
                                    <br />
                                    @featuredBook.ISBN
                                    <br />
                                    @featuredBook.DateCreated.ToString("MM-dd-yy")
                                    <br />
                                    <img src="@featuredBook.ImageLocation" />
                                    <br />
                                    <a class="btn btn-block btn-warning" href="@Url.Action("Loan", new { id = featuredBook.BookTemplateId })">View</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h2>Top Genre</h2>
                    <div class="horizontal-scrolling-wrapper">
                        <div class="horizontal-scrolling-container">
                            @foreach (var featuredBook in Model.TopGenre)
                            {
                                <div class="body-container" style="margin-right:40px; display:inline-block !important;">
                                    @featuredBook.Title
                                    <br />
                                    @featuredBook.ISBN
                                    <br />
                                    @featuredBook.DateCreated.ToString("MM-dd-yy")
                                    <br />
                                    <img src="@featuredBook.ImageLocation" />
                                    <br />
                                    <a class="btn btn-block btn-warning" href="@Url.Action("Loan", new { id = featuredBook.BookTemplateId })">View</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="body-container">
                <h4>Filters</h4>
                @using (Html.BeginForm("Gallery/Find","Books",FormMethod.Get,new { @class="form-horizontal" })) {

                    <label class="control-label">Title</label>
                    <input name="title" class="form-control form-control-line-only" placeholder="Title" />

                    <label class="control-label">ISBN</label>
                    <input name="isbn" class="form-control form-control-line-only" placeholder="ISBN" />

                    <label class="control-label">Genre</label>
                    <select name="genreId" class="form-control form-control-line-only" placeholder="Genre">
                        @{ 
                            List<WizBooklat.Models.Genre> sl = (List<WizBooklat.Models.Genre>)ViewBag.GenreOptions;
                            foreach (var option in sl)
                            {
                                <option value="@option.GenreId">@option.Name</option>
                            }
                        }
                    </select>

                    <br />

                    <button class="btn btn-block btn-info" type="submit">Search</button>

                    <br />
                }
            </div>
        </div>
    </div>
    
</div>

@section scripts{
    
}